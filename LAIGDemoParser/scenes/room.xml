<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0.7" a="1" /> //blue like the submarine in cgra tp6
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>

<!-- light in center of the scene-->
	<LIGHT id="light0">
        <enable value ="1" />
        <position  x="7.5" y="5.0" z="7.5" w="1" />
        <ambient r="0" g="0" b="0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>

  <!-- Table Legs -->
  <TEXTURE id="table_legs">
      <file path="images_room/marmore.jpg" />
      <amplif_factor s="1" t="1" />
  </TEXTURE>

	<!-- couch -->
  <TEXTURE id="couch">
      <file path="images_room/rust.jpg" />
      <amplif_factor s="1" t="1" />
  </TEXTURE>

	<!-- couch Head -->
  <TEXTURE id="couch_head">
      <file path="images_room/rock.jpg" />
      <amplif_factor s="1" t="1" />
  </TEXTURE>

</TEXTURES>

<!-- Materials -->
<MATERIALS>

      <!-- A default material -->
      <MATERIAL id="defaultMaterial">
          <shininess value="1" />
          <specular r="0.0" g="0.0" b="0.0" a="1" />
          <diffuse r="0.4" g="0.4" b="0.4" a="1" />
          <ambient r="0.4" g="0.4" b="0.4" a="1" />
          <emission r="0.0" g="0.0" b="0.0" a="1" />
      </MATERIAL>

		<!-- Metal material -->
  <MATERIAL id="metalMaterial">
      <shininess value="50" />
      <specular r="1" g="1" b="1" a="0.5" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1" />
      <ambient r="0.3" g="0.3" b="0.3" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
  </MATERIAL>

  <!-- Floor material -->
<MATERIAL id="floorMaterial">
    <shininess value="50" />
    <specular r="0.5" g="0.5" b="0.5" a="0.5" />
    <diffuse r="0" g="0" b="0" a="1" />
    <ambient r="0.3" g="0.3" b="0.3" a="1" />
    <emission r="0.0" g="0.0" b="0.0" a="1" />
</MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="floor" />
            <NODEREF id="walls" />
            <NODEREF id="lamp" />
            <NODEREF id="table" />
            <NODEREF id="couch" />
        </DESCENDANTS>

    </NODE>

    <!-- The floor -->
    <NODE id="floor">
        <MATERIAL id="floorMaterial" />
        <TEXTURE id="null" />

        <SCALE sx="6" sy="1" sz="5" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
				</DESCENDANTS>

    </NODE>

    <!-- The wall -->
    <NODE id="walls">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <SCALE sx="6" sy="1" sz="5" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
          <NODEREF id="wall_left" />
          <NODEREF id="wall_back" />
        </DESCENDANTS>

    </NODE>

    <!-- The Left Wall -->
    <NODE id="wall_left">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <SCALE sx="6" sy="1" sz="5" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
          <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- The Back Wall -->
    <NODE id="wall_back">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <SCALE sx="6" sy="1" sz="5" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
          <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Lamp post -->
    <NODE id="lamp">
        <MATERIAL id="metalMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
           <NODEREF id="light_bulb" />
           <NODEREF id="light_post" />
        </DESCENDANTS>

    </NODE>

    <!-- Light bulb -->
    <NODE id="light_bulb">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="10" z="0" />
        <SCALE sx="-1" sy="1" sz="1" />

        <DESCENDANTS>
            <LEAF id="sphere1" type="sphere" args="2 20 20" />
        </DESCENDANTS>

    </NODE>

    <!-- The post in the lamp post... -->
    <NODE id="light_post">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <SCALE sx="0.5" sy="2.02" sz="0.5" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
          <LEAF id="cylinder1" type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>

    </NODE>

    <!-- couch -->
    <NODE id="couch">
        <MATERIAL id="null" />
        <TEXTURE id="couch" />

        <DESCENDANTS>
       		<NODEREF id="couch_top" />
          <NODEREF id="couch_base" />
          <NODEREF id="couch_headboard" />
          <NODEREF id="couch_side_l" />
          <NODEREF id="couch_side_r" />
        </DESCENDANTS>

    </NODE>

    <!--Couch Top  -->
    <NODE id="couch_top">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="-2" z="21" />

        <DESCENDANTS>
            <NODEREF id="cube" />
        </DESCENDANTS>

    </NODE>

    <!-- Couch Base -->
     <NODE id="couch_base">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="-2" z="4" />

        <DESCENDANTS>
            <NODEREF id="cube" />
        </DESCENDANTS>

    </NODE>

    <!-- Couch Headboard -->
    <NODE id="couch_headboard">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="-2" z="21" />

        <DESCENDANTS>
            <LEAF id="cylinder2" type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>

    </NODE>

    <!-- Couch Side Left -->
     <NODE id="couch_side_l">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="-2" z="4" />

        <DESCENDANTS>
            <NODEREF id="cube" />
        </DESCENDANTS>

    </NODE>

    <!-- Couch Side Right -->
    <NODE id="couch_side_r">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="-2" z="21" />

        <DESCENDANTS>
            <NODEREF id="cube" />
        </DESCENDANTS>

    </NODE>

    <!-- Table -->
    <NODE id="table">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="table_top" />
            <NODEREF id="table_legs" />
        </DESCENDANTS>

    </NODE>

    <!-- Table Top -->
    <NODE id="table_top">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="-2" y="0" z="5" />

        <DESCENDANTS>
            <NODEREF id="cube" />
        </DESCENDANTS>

    </NODE>

    <!-- Table Legs -->
    <NODE id="table_legs">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="22" y="0" z="5" />

        <DESCENDANTS>
            <NODEREF id="table_legs1" />
            <NODEREF id="table_legs2" />
            <NODEREF id="table_legs3" />
            <NODEREF id="table_legs4" />
        </DESCENDANTS>

    </NODE>

    <!-- Table Legs1 -->
    <NODE id="table_legs1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="table_leg" />
        </DESCENDANTS>

    </NODE>

    <!-- Table Legs2 -->
    <NODE id="table_legs2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="table_leg" />
        </DESCENDANTS>

    </NODE>

    <!-- Table Legs3 -->
    <NODE id="table_legs1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="table_leg" />
        </DESCENDANTS>

    </NODE>

    <!-- Table Legs4 -->
    <NODE id="table_legs4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="table_leg" />
        </DESCENDANTS>

    </NODE>

    <!-- Table Leg -->
    <NODE id="table_leg">
        <MATERIAL id="null" />
        <TEXTURE id="metalMaterial" />

        <ROTATION axis="x" angle="90" />
        <TRANSLATION x="5" y="5" z="-4" />

        <DESCENDANTS>
					<LEAF type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>

    </NODE>

    <!-- Unitary Cube -->
    <NODE id="cube">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="y" angle="90" />
        <SCALE sx="0.5" sy="0.5" sz="1.5" />

        <DESCENDANTS>
       		<NODEREF id="cube_face1" />
            <NODEREF id="cube_face2" />
            <NODEREF id="cube_face3" />
            <NODEREF id="cube_face4" />
            <NODEREF id="cube_face5" />
            <NODEREF id="cube_face6" />
        </DESCENDANTS>

    </NODE>

    <!-- A cube face1 -->
    <NODE id="cube_face1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2.5" y="4" z="7.5" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- A cube face 2 -->
     <NODE id="cube_face2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2.5" y="4" z="2.5" />
		<ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- A cube face 3 -->
     <NODE id="cube_face3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="4" z="7.5" />
		<ROTATION axis="y" angle="90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- A cube face 4 -->
     <NODE id="cube_face 4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- A cube face 5 -->
     <NODE id="cube_face5">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="2.5" y="-7.5" z="8" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
 					<LEAF  type="rectangle" args="0 4 5 0" />
       </DESCENDANTS>

    </NODE>

    <!-- A cube face 6 -->
     <NODE id="cube_face6">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="x" angle="90" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

</NODES>

</SCENE>
