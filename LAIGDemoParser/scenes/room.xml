<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0.7" a="1" /> //blue like the submarine in cgra tp6
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>

<!-- light in center of the scene-->
	<LIGHT id="lamp_light">
        <enable value ="1" />
        <position  x="7.5" y="5" z="7.5" w="1" />
        <ambient r="1" g="1" b="1" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>

  <!-- Table Legs -->
  <TEXTURE id="legsTexture">
      <file path="images_room/marmore.jpg" />
      <amplif_factor s="1" t="1" />
  </TEXTURE>

	<!-- couch -->
  <TEXTURE id="couch">
      <file path="images_room/rust.jpg" />
      <amplif_factor s="1" t=" 1" />
  </TEXTURE>

	<!-- couch Head -->
  <TEXTURE id="couch_head">
      <file path="images_room/rock.jpg" />
      <amplif_factor s="1" t="1" />
  </TEXTURE>

</TEXTURES>

<!-- Materials -->
<MATERIALS>

      <!-- A default material -->
      <MATERIAL id="defaultMaterial">
          <shininess value="1" />
          <specular r="0.0" g="0.0" b="0.0" a="1" />
          <diffuse r="0.4" g="0.4" b="0.4" a="1" />
          <ambient r="0.4" g="0.4" b="0.4" a="1" />
          <emission r="0.0" g="0.0" b="0.0" a="1" />
      </MATERIAL>

		<!-- Metal material -->
  <MATERIAL id="metalMaterial">
      <shininess value="50" />
      <specular r="1" g="1" b="1" a="0.5" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1" />
      <ambient r="0.3" g="0.3" b="0.3" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
  </MATERIAL>

  <!-- Floor material -->
<MATERIAL id="floorMaterial">
    <shininess value="50" />
    <specular r="0.5" g="0.5" b="0.5" a="0.5" />
    <diffuse r="0" g="0" b="0" a="1" />
    <ambient r="0.3" g="0.3" b="0.3" a="1" />
    <emission r="0.0" g="0.0" b="0.0" a="1" />
</MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="floor" />
            <NODEREF id="walls" />
             <NODEREF id="lamp" />
            <NODEREF id="couch" />
            <NODEREF id="table" />
        </DESCENDANTS>

    </NODE>

    <!-- The floor -->
    <NODE id="floor">
        <MATERIAL id="floorMaterial" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="0" z="7.5" />
        <ROTATION axis="x" angle="-90" />
        <SCALE sx="15" sy="15" sz="1" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
				</DESCENDANTS>

    </NODE>

    <!-- The wall -->
    <NODE id="walls">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
          <NODEREF id="wall_left" />
          <NODEREF id="wall_back" />
        </DESCENDANTS>

    </NODE>

    <!-- The Back Wall -->
    <NODE id="wall_back">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="2.5" z="0" />

        <DESCENDANTS>
          <NODEREF id="wall" />
        </DESCENDANTS>

    </NODE>

    <!-- The Left Wall -->
    <NODE id="wall_left">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="2.5" z="7.5" />
        <ROTATION axis="y" angle="90" />

        <DESCENDANTS>
          <NODEREF id="wall" />
        </DESCENDANTS>
    </NODE>

    <NODE id="wall">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <SCALE sx="15" sy="5" sz="1" />

        <DESCENDANTS>
          <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
        </DESCENDANTS>
    </NODE>

    <!-- Lamp post -->
    <NODE id="lamp">
        <MATERIAL id="metalMaterial" />
        <TEXTURE id="null" />

        <TRANSLATION x="13.5" y="0" z="13.5" />

        <DESCENDANTS>
           <NODEREF id="light_bulb" />
           <NODEREF id="light_post" />
           <NODEREF id="light_base" />
        </DESCENDANTS>

    </NODE>

    <!-- Light bulb -->
    <NODE id="light_bulb">
        <MATERIAL id="null" />
        <TEXTURE id="couch" />

        <TRANSLATION x="0" y="3" z="0" />
		<ROTATION axis="y" angle="180" />
		
        <DESCENDANTS>
            <LEAF type="sphere" args="1 20 20" />
        </DESCENDANTS>

    </NODE>

    <!-- The post in the lamp post... -->
    <NODE id="light_post">
        <MATERIAL id="null" />
        <TEXTURE id="couch_head" />

        <SCALE sx="0.3" sy="0.8" sz="0.3" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
          <LEAF type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>

</NODE>

<!-- The post in the lamp post... -->
<NODE id="light_base">
    <MATERIAL id="null" />
    <TEXTURE id="couch_head" />

    <TRANSLATION x="0" y="0" z="0" />
    <SCALE sx="0.6" sy="0.1" sz="0.6" />
    <ROTATION axis="x" angle="-90" />

    <DESCENDANTS>
        <LEAF type="sphere" args="2 20 20" />
    </DESCENDANTS>

</NODE>


<!-- couch -->
 <NODE id="couch">
     <MATERIAL id="null" />
     <TEXTURE id="couch" />

     <TRANSLATION x="13" y="0.5" z="7.5"/>

     <DESCENDANTS>
       <NODEREF id="couch_top" />
       <NODEREF id="couch_base" />
       <NODEREF id="couch_headboard" />
       <NODEREF id="couch_side_l" />
       <NODEREF id="couch_side_r" />
     </DESCENDANTS>

 </NODE>

 <!--Couch Top  -->
 <NODE id="couch_top">
     <MATERIAL id="null" />
     <TEXTURE id="null" />

     <SCALE sx="3" sy="1" sz="5" />

     <DESCENDANTS>
         <NODEREF id="cube" />
     </DESCENDANTS>

 </NODE>

 <!-- Couch Base -->
  <NODE id="couch_base">
     <MATERIAL id="null" />
     <TEXTURE id="null" />

     <TRANSLATION x="1" y="1" z="0" />
     <SCALE sx="1" sy="2.5" sz="5" />

     <DESCENDANTS>
         <NODEREF id="cube" />
     </DESCENDANTS>

 </NODE>

 <!-- Couch Headboard -->
 <NODE id="couch_headboard">
     <MATERIAL id="null" />
     <TEXTURE id="couch_head" />

     <TRANSLATION x="1" y="2" z="-2.5" />

     <DESCENDANTS>
         <LEAF type="cylinder" args="5 0.6 0.6 20 20" />
     </DESCENDANTS>

 </NODE>

 <!-- Couch Side Left -->
  <NODE id="couch_side_l">
     <MATERIAL id="null" />
     <TEXTURE id="couch_head" />

<TRANSLATION x="0" y="1" z="2" />
        <SCALE sx="3" sy="1.5" sz="1" />

     <DESCENDANTS>
         <NODEREF id="cube" />
     </DESCENDANTS>

 </NODE>

 <!-- Couch Side Right -->
 <NODE id="couch_side_r">
     <MATERIAL id="null" />
     <TEXTURE id="couch_head" />

      <TRANSLATION x="0" y="1" z="-2" />
     <SCALE sx="3" sy="1.5" sz="1" />

     <DESCENDANTS>
         <NODEREF id="cube" />
     </DESCENDANTS>

</NODE>

<!-- Table -->
   <NODE id="table">
       <MATERIAL id="null" />
       <TEXTURE id="couch_head" />

       <TRANSLATION x="1.5" y="0" z="7.5" />

       <DESCENDANTS>
           <NODEREF id="table_top" />
           <NODEREF id="table_legs" />
       </DESCENDANTS>

   </NODE>

   <!-- Table Top -->
   <NODE id="table_top">
       <MATERIAL id="null" />
       <TEXTURE id="null" />

      <TRANSLATION x="0" y="1" z="0" />
       <SCALE sx="2.5" sy="0.5" sz="5"/>


       <DESCENDANTS>
           <NODEREF id="cube" />
       </DESCENDANTS>

   </NODE>

   <!-- Table Legs -->
   <NODE id="table_legs">
       <MATERIAL id="null" />
       <TEXTURE id="null" />

       <TRANSLATION x="0" y="0" z="0" />

       <DESCENDANTS>
           <NODEREF id="table_legs1" />
           <NODEREF id="table_legs2" />
           <NODEREF id="table_legs3" />
           <NODEREF id="table_legs4" />
       </DESCENDANTS>

   </NODE>

   <!-- Table Legs1 -->
   <NODE id="table_legs1">
       <MATERIAL id="null" />
       <TEXTURE id="null" />

   <TRANSLATION x="-0.9" y="0" z="-2.2" />

       <DESCENDANTS>
           <NODEREF id="table_leg" />
       </DESCENDANTS>

   </NODE>

   <!-- Table Legs2 -->
   <NODE id="table_legs2">
       <MATERIAL id="null" />
       <TEXTURE id="null" />

  <TRANSLATION x="0.9" y="0" z="-2.2" />

       <DESCENDANTS>
           <NODEREF id="table_leg" />
       </DESCENDANTS>

   </NODE>

   <!-- Table Legs3 -->
   <NODE id="table_legs3">
       <MATERIAL id="null" />
       <TEXTURE id="null" />

   <TRANSLATION x="-0.9" y="0" z="2.2" />

       <DESCENDANTS>
           <NODEREF id="table_leg" />
       </DESCENDANTS>

   </NODE>

   <!-- Table Legs4 -->
   <NODE id="table_legs4">
       <MATERIAL id="null" />
       <TEXTURE id="null" />

   <TRANSLATION x="0.9" y="0" z="2.2" />

       <DESCENDANTS>
           <NODEREF id="table_leg" />
       </DESCENDANTS>

   </NODE>

   <!-- Table Leg -->
   <NODE id="table_leg">
       <MATERIAL id="metalMaterial" />
       <TEXTURE id="clear" />

       <SCALE sx="0.3" sy="0.8" sz="0.3" />
       <ROTATION axis="x" angle="-90" />

       <DESCENDANTS>
         <LEAF type="cylinder" args="1.5 1 1 20 20" />
       </DESCENDANTS>

   </NODE>


<!-- Unitary Cube -->
<!-- Tree leaves -->
 <NODE id="cube">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="faceCubo1" />
        <NODEREF id="faceCubo2" />
        <NODEREF id="faceCubo3" />
        <NODEREF id="faceCubo4" />
        <NODEREF id="faceCubo5" />
        <NODEREF id="faceCubo6" />
    </DESCENDANTS>

</NODE>

<!-- A cube face -->
<NODE id="faceCubo1">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0" y="0" z="0.5" />

    <DESCENDANTS>
        <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
    </DESCENDANTS>

</NODE>

<!-- Another cube face -->
 <NODE id="faceCubo2">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <ROTATION axis="x" angle="180" />
    <TRANSLATION x="0" y="0" z="0.5" />

    <DESCENDANTS>
        <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
    </DESCENDANTS>

</NODE>

<!-- Another cube face -->
<NODE id="faceCubo3">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <ROTATION axis="x" angle="-90" />
    <TRANSLATION x="0" y="0" z="0.5" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
    </DESCENDANTS>

</NODE>

<!-- Another cube face -->
<NODE id="faceCubo4">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <ROTATION axis="x" angle="90" />
    <TRANSLATION x="0" y="0" z="0.5" />

    <DESCENDANTS>
        <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
    </DESCENDANTS>

</NODE>

<!-- Another cube face -->
<NODE id="faceCubo5">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <ROTATION axis="y" angle="-90" />
    <TRANSLATION x="0" y="0" z="0.5" />


    <DESCENDANTS>
      <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
   </DESCENDANTS>

</NODE>

<!-- Another cube face -->
<NODE id="faceCubo6">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <ROTATION axis="y" angle="90" />
    <TRANSLATION x="0" y="0" z="0.5" />


    <DESCENDANTS>
        <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
    </DESCENDANTS>

</NODE>

</NODES>

</SCENE>
